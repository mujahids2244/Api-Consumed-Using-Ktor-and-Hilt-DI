<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/designList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/filmImg"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/filmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/filmImg"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="cdjncjlcndk;acnk"
        android:textColor="#551A91"
        android:textSize="20sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/filmDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filmTitle"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/filmImg"
        android:ellipsize="end"
        android:maxLines="8"
        android:text="cdjncjlcndk;acncmrwepvmckovmkoemvkfemkmvfkemklek"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/no_data_found"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"

        />


</RelativeLayout>

